<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- advance salary rule -->
        <record id="hr_payslip_rule_sol_anticipo" model="hr.salary.rule">
            <field name="code">SANTS</field>
            <field name="name">Solicitud de Anticipo</field>
            <field name="category_id" ref="l10n_cl_hr.ODESC"/>
            <field name="amount_select">code</field>
            <field name="amount_python_compute">result = inputs.SAR and - (inputs.SAR.amount)</field>
            <field name="appears_on_payslip" eval="True"/>
            <field name="sequence" eval="190"/>
        </record>

        <record id="hr_rule_input_sol_anticipo" model="hr.rule.input">
            <field name="code">SANTS</field>
            <field name="name">Solicitud de Anticipo</field>
            <field name="input_id" ref="hr_payslip_rule_sol_anticipo"/>
        </record>

    </data>
</odoo>
